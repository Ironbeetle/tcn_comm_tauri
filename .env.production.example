# TCN_COMM Production Environment Variables
# Copy this file to .env on the VPS and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:YOUR_DB_PASSWORD@localhost:5432/msgmanager?schema=msgmanager"

# ===========================================
# NEXTAUTH (Authentication)
# ===========================================
# IMPORTANT: Set this to your actual domain or localhost:3001
NEXTAUTH_URL=http://localhost:3001
# Generate a new secret: openssl rand -hex 32
NEXTAUTH_SECRET=your-production-secret-here

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# ===========================================
# TWILIO (SMS)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# RESEND (Email)
# ===========================================
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=your-email@domain.com
RESEND_FROM_NAME=TCN Messenger

# ===========================================
# TCN PORTAL INTEGRATION
# ===========================================
# Portal URL (the community member portal)
TCN_PORTAL_URL=http://localhost:3000
TCN_PORTAL_API_KEY=your-shared-api-key

# Portal Sync API (server-side)
PORTAL_API_KEY=your-shared-api-key
PORTAL_API_URL=http://localhost:3000/api/sync

# Portal Contacts API (client-side - for member search)
NEXT_PUBLIC_PORTAL_API_KEY=your-shared-api-key
NEXT_PUBLIC_PORTAL_API_URL=http://localhost:3000/api/sync

# ===========================================
# LEGACY/OPTIONAL
# ===========================================
TCN_API_KEY1=your-api-key
TCN_REMOTE_BASE=http://localhost:4001
TCN_REMOTE_API_KEY=your-api-key
MOBILE_API_KEY=your-mobile-api-key
